{
  "projectName": "portfolio-mario-game",
  "baseUrl": "http://localhost:5173",
  "devServer": {
    "command": "npm run dev",
    "port": 5173,
    "timeout": 10000
  },
  "testScenarios": [
    {
      "name": "page_loads",
      "description": "Verify the main page loads successfully",
      "actions": [
        {
          "type": "navigate",
          "url": "/"
        },
        {
          "type": "waitFor",
          "selector": "#game-container",
          "timeout": 5000
        },
        {
          "type": "screenshot",
          "name": "page_loaded"
        }
      ],
      "assertions": [
        {
          "type": "elementExists",
          "selector": "#game-canvas"
        },
        {
          "type": "elementExists",
          "selector": "#game-container"
        },
        {
          "type": "titleContains",
          "text": "Portfolio Mario Game"
        }
      ]
    },
    {
      "name": "game_canvas_initializes",
      "description": "Check that the game canvas is properly initialized",
      "actions": [
        {
          "type": "navigate",
          "url": "/"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 2000
        }
      ],
      "assertions": [
        {
          "type": "canvasNotEmpty",
          "selector": "#game-canvas"
        },
        {
          "type": "elementVisible",
          "selector": "#game-canvas"
        }
      ]
    },
    {
      "name": "maintenance_mode_check",
      "description": "Verify maintenance overlay behavior",
      "actions": [
        {
          "type": "navigate",
          "url": "/"
        },
        {
          "type": "waitFor",
          "selector": "#maintenance-overlay",
          "timeout": 3000
        }
      ],
      "assertions": [
        {
          "type": "elementExists",
          "selector": "#maintenance-overlay"
        }
      ]
    },
    {
      "name": "responsive_design",
      "description": "Test responsive behavior on different screen sizes",
      "viewport": [
        { "width": 1920, "height": 1080 },
        { "width": 768, "height": 1024 },
        { "width": 375, "height": 667 }
      ],
      "actions": [
        {
          "type": "navigate",
          "url": "/"
        },
        {
          "type": "waitFor",
          "selector": "#game-container",
          "timeout": 5000
        },
        {
          "type": "screenshot",
          "name": "responsive_test"
        }
      ],
      "assertions": [
        {
          "type": "elementVisible",
          "selector": "#game-container"
        }
      ]
    },
    {
      "name": "console_errors",
      "description": "Check for JavaScript console errors",
      "actions": [
        {
          "type": "navigate",
          "url": "/"
        },
        {
          "type": "wait",
          "duration": 3000
        }
      ],
      "assertions": [
        {
          "type": "noConsoleErrors",
          "severity": "error"
        }
      ]
    },
    {
      "name": "dev_mode_bypass",
      "description": "Test that dev mode bypasses maintenance overlay",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "wait",
          "duration": 2000
        },
        {
          "type": "screenshot",
          "name": "dev_mode_active"
        }
      ],
      "assertions": [
        {
          "type": "elementExists",
          "selector": "#game-canvas"
        },
        {
          "type": "consoleContains",
          "text": "Portfolio Mario Game Initialized!"
        }
      ]
    },
    {
      "name": "game_initialization",
      "description": "Verify the Mario game initializes properly",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 3000
        }
      ],
      "assertions": [
        {
          "type": "canvasNotEmpty",
          "selector": "#game-canvas"
        },
        {
          "type": "consoleContains",
          "text": "Controls: Arrow Keys/WASD to move"
        },
        {
          "type": "elementExists",
          "selector": "#debug-info"
        }
      ]
    },
    {
      "name": "debug_mode_toggle",
      "description": "Test debug mode can be toggled with F1 key",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 2000
        },
        {
          "type": "keyPress",
          "key": "F1"
        },
        {
          "type": "wait",
          "duration": 500
        },
        {
          "type": "screenshot",
          "name": "debug_mode_on"
        }
      ],
      "assertions": [
        {
          "type": "elementVisible",
          "selector": "#debug-info.visible"
        },
        {
          "type": "consoleContains",
          "text": "Debug mode ON"
        }
      ]
    },
    {
      "name": "player_controls",
      "description": "Test that player controls are responsive",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 2000
        },
        {
          "type": "keyPress",
          "key": "ArrowRight"
        },
        {
          "type": "wait",
          "duration": 500
        },
        {
          "type": "keyPress",
          "key": "Space"
        },
        {
          "type": "wait",
          "duration": 1000
        },
        {
          "type": "screenshot",
          "name": "player_movement"
        }
      ],
      "assertions": [
        {
          "type": "canvasNotEmpty",
          "selector": "#game-canvas"
        },
        {
          "type": "noConsoleErrors",
          "severity": "error"
        }
      ]
    },
    {
      "name": "audio_system",
      "description": "Test that audio system initializes without errors",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 3000
        }
      ],
      "assertions": [
        {
          "type": "noConsoleErrors",
          "severity": "error"
        },
        {
          "type": "audioContextExists"
        }
      ]
    },
    {
      "name": "mystery_box_interaction",
      "description": "Test mystery box functionality",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 2000
        },
        {
          "type": "keyPress",
          "key": "F1"
        },
        {
          "type": "wait",
          "duration": 500
        },
        {
          "type": "screenshot",
          "name": "mystery_boxes_visible"
        }
      ],
      "assertions": [
        {
          "type": "elementVisible",
          "selector": "#debug-info.visible"
        },
        {
          "type": "canvasNotEmpty",
          "selector": "#game-canvas"
        }
      ]
    },
    {
      "name": "game_performance",
      "description": "Test that game maintains smooth performance",
      "actions": [
        {
          "type": "navigate",
          "url": "/?dev=true"
        },
        {
          "type": "waitFor",
          "selector": "#game-canvas",
          "timeout": 5000
        },
        {
          "type": "wait",
          "duration": 5000
        },
        {
          "type": "performanceMetrics"
        }
      ],
      "assertions": [
        {
          "type": "fpsAbove",
          "threshold": 30
        },
        {
          "type": "memoryUsageBelow",
          "threshold": 100
        }
      ]
    }
  ],
  "performance": {
    "enabled": true,
    "thresholds": {
      "loadTime": 3000,
      "firstContentfulPaint": 1500,
      "largestContentfulPaint": 2500
    }
  },
  "accessibility": {
    "enabled": true,
    "level": "AA"
  },
  "reporting": {
    "format": "json",
    "outputDir": "./results/test-results",
    "includeScreenshots": true,
    "includeTrace": true
  }
}
